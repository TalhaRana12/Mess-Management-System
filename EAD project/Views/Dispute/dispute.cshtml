@{
    Layout = null;
}
@using EAD_project.Controllers
@model DisputeViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mess Management - Disputes</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/dispute.css">
</head>
<body>

    <div class="dashboard-wrapper">
        <!-- Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h3><i class="bi bi-egg-fried me-2"></i>MessHub</h3>
            </div>
            <nav class="sidebar-nav">
                <a href="@Url.Action("Admindashboard","Admin")" class="nav-link"><i class="bi bi-grid-1x2-fill"></i> Dashboard</a>
                <a href="@Url.Action("members","Members")" class="nav-link"><i class="bi bi-people-fill"></i> Members</a>
                <a href="@Url.Action("attendance","Attendance")" class="nav-link"><i class="bi bi-calendar-check-fill"></i> Attendance</a>
                <a href="@Url.Action("menu","Menu")" class="nav-link"><i class="bi bi-journal-text"></i> Menu</a>
                <a href="@Url.Action("bill","Bill")" class="nav-link"><i class="bi bi-receipt"></i> Bills</a>
                <a href="@Url.Action("dispute","Dispute")" class="nav-link active"><i class="bi bi-exclamation-triangle-fill"></i> Disputes</a>
            </nav>
            <div class="sidebar-footer">
                <a href="@Url.Action("logout", "Logout")" class="nav-link"><i class="bi bi-box-arrow-left"></i> Logout</a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Navbar -->
            <header class="top-navbar">
                <button class="btn sidebar-toggle d-lg-none" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <h4 class="page-title">Disputes Management</h4>
                <div class="navbar-right">
                    <div class="notification-bell" id="notificationBell" title="Pending Disputes">
                        <i class="bi bi-bell-fill"></i>
                        <span class="notification-badge" id="pendingBadge">0</span>
                    </div>
                    <span class="user-greeting">Hello, <strong>Admin</strong></span>
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                </div>
            </header>

            <!-- Disputes Content -->
            <div class="dashboard-content">
                <!-- Stats Row -->
                <div class="row g-3 mb-4">
                    <div class="col-6 col-lg-3">
                        <div class="stat-card" onclick="filterByStatus('all')">
                            <div class="stat-icon bg-primary-light">
                                <i class="bi bi-exclamation-triangle-fill text-primary"></i>
                            </div>
                            <div class="stat-info">
                                <h4 id="totalDisputes">0</h4>
                                <p>Total Disputes</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="stat-card stat-card-warning" onclick="filterByStatus('pending')">
                            <div class="stat-icon bg-warning-light">
                                <i class="bi bi-hourglass-split text-warning"></i>
                            </div>
                            <div class="stat-info">
                                <h4 id="pendingDisputes">0</h4>
                                <p>Pending Review</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="stat-card" onclick="filterByStatus('resolved')">
                            <div class="stat-icon bg-success-light">
                                <i class="bi bi-check-circle-fill text-success"></i>
                            </div>
                            <div class="stat-info">
                                <h4 id="resolvedDisputes">0</h4>
                                <p>Resolved</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="stat-card" onclick="filterByStatus('rejected')">
                            <div class="stat-icon bg-danger-light">
                                <i class="bi bi-x-circle-fill text-danger"></i>
                            </div>
                            <div class="stat-info">
                                <h4 id="rejectedDisputes">0</h4>
                                <p>Rejected</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filter Section - Type filter removed -->
                <div class="filter-section">
                    <div class="filter-left">
                        <h5><i class="bi bi-funnel me-2"></i>Filter Disputes</h5>
                    </div>
                    <div class="filter-right">
                        <select class="form-select filter-select" id="statusFilter" onchange="applyFilters()">
                            <option value="all">All Status</option>
                            <option value="pending">Pending</option>
                            <option value="resolved">Resolved</option>
                            <option value="rejected">Rejected</option>
                        </select>
                        <select class="form-select filter-select" id="monthFilter" onchange="applyFilters()">
                            <option value="all">All Months</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                        <div class="search-box">
                            <i class="bi bi-search"></i>
                            <input type="text" id="searchInput" placeholder="Search by name..." oninput="applyFilters()">
                        </div>
                    </div>
                </div>

                <!-- Disputes List -->
                <div class="disputes-list" id="disputesList">
                    <!-- Loading State -->
                    <div class="loading-state" id="loadingState">
                        <div class="spinner-border text-success" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Loading disputes...</p>
                    </div>
                </div>

                <!-- Empty State -->
                <div class="empty-state" id="emptyState" style="display: none;">
                    <i class="bi bi-inbox"></i>
                    <h5>No Disputes Found</h5>
                    <p>There are no disputes matching your filter criteria.</p>
                </div>
            </div>
        </main>
    </div>

    <!-- Review Dispute Modal -->
    <div class="modal fade" id="reviewModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-clipboard-check me-2"></i>Review Dispute</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Dispute Header -->
                    <div class="review-header">
                        <div>
                            <h4 id="reviewDisputeId">Dispute #0000</h4>
                            <small id="reviewSubmittedDate">Submitted: -</small>
                        </div>
                        <span class="badge" id="reviewStatusBadge">Pending</span>
                    </div>

                    <!-- Member Info Section -->
                    <div class="review-section">
                        <h6><i class="bi bi-person-fill"></i>Member Information</h6>
                        <table class="review-table">
                            <tr>
                                <td>Name:</td>
                                <td id="reviewMemberName">-</td>
                            </tr>
                            <tr>
                                <td>Username:</td>
                                <td id="reviewMemberUsername">-</td>
                            </tr>
                            <tr>
                                <td>Department:</td>
                                <td id="reviewMemberDepartment">-</td>
                            </tr>
                        </table>
                    </div>

                    <!-- Dispute Details Section -->
                    <div class="review-section">
                        <h6><i class="bi bi-exclamation-circle"></i>Dispute Details</h6>
                        <table class="review-table">
                            <tr>
                                <td>Dispute Type:</td>
                                <td><span class="dispute-type-badge" id="reviewDisputeType">-</span></td>
                            </tr>
                            <tr>
                                <td>Related Month:</td>
                                <td id="reviewRelatedMonth">-</td>
                            </tr>
                        </table>
                    </div>

                    <!-- Attendance Records Section (for attendance disputes) -->
                    <div class="review-section" id="attendanceRecordsSection">
                        <h6><i class="bi bi-calendar-check"></i>Disputed Attendance Records</h6>
                        <div class="table-responsive">
                            <table class="attendance-review-table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Meal</th>
                                        <th>Current Record</th>
                                        <th>Member Claims</th>
                                    </tr>
                                </thead>
                                <tbody id="attendanceRecordsBody">
                                    <!-- Records will be loaded here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" id="reviewModalFooter"> 
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="rejectBtn" onclick="openResponseModal('reject')">
                        <i class="bi bi-x-circle me-2"></i>Reject
                    </button>
                    <button type="button" class="btn btn-success" id="approveBtn" onclick="openResponseModal('approve')">
                        <i class="bi bi-check-circle me-2"></i>Approve
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Response Modal -->
    <div class="modal fade" id="responseModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" id="responseModalHeader">
                    <h5 class="modal-title" id="responseModalTitle">
                        <i class="bi bi-check-circle me-2"></i>Approve Dispute
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Response Type Indicator -->
                    <div class="response-type-indicator" id="responseTypeIndicator">
                        <i class="bi bi-check-circle-fill"></i>
                        <h5 id="responseTypeTitle">Approving Dispute</h5>
                        <p class="text-muted mb-0" id="responseTypeDesc">The member's dispute will be marked as resolved.</p>
                    </div>

                    <!-- Dispute Summary -->
                    <div class="dispute-summary-box">
                        <div class="summary-row">
                            <span>Dispute ID:</span>
                            <span id="summaryDisputeId">#0000</span>
                        </div>
                        <div class="summary-row">
                            <span>Member:</span>
                            <span id="summaryMemberName">-</span>
                        </div>
                        <div class="summary-row">
                            <span>Type:</span>
                            <span id="summaryDisputeType">-</span>
                        </div>
                    </div>

                    <!-- Correction Checkbox (for approve only) -->
                    <div class="mb-3" id="correctionCheckboxDiv">
                        <div class="form-check correction-checkbox">
                            <input class="form-check-input" type="checkbox" id="applyCorrection" checked>
                            <label class="form-check-label" for="applyCorrection">
                                Apply attendance correction based on member's claim
                            </label>
                        </div>
                        <small class="text-muted d-block mt-1">This will update the attendance records automatically.</small>
                    </div>

                    <!-- Response Message -->
                    <div class="mb-3">
                        <label for="responseMessage" class="form-label fw-semibold">Response Message <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="responseMessage" rows="4" placeholder="Enter your response to the member..."></textarea>
                        <small class="text-muted">This message will be visible to the member.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn" id="submitResponseBtn" onclick="submitResponse()">
                        <i class="bi bi-send me-2"></i>Submit Response
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container" id="toastContainer"></div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->

<script>
    // Inject Data from C# Model to JavaScript
    window.disputeBackendData = {
        requests: @Html.Raw(Json.Serialize(Model.Requests.Select(r => new
            {
                requestId = r.RequestId,
                attendanceId = r.AttendanceId,
                userId = r.UserId,
                requestDate = r.RequestDate,
                status = r.Status,
                adminMessage = r.AdminMessage,
                // User Details
                userName = r.User.Name,
                userLogin = r.User.Username,
                userDept = r.User.Department
            }))),

        attendances: @Html.Raw(Json.Serialize(Model.Attendances.Select(a => new
            {
                attendanceId = a.AttendanceId,
                date = a.AttendanceDate,
                teaWater = a.TeaWater,
                food = a.Food,
                foodPrice = a.FoodPrice,
                mealType = a.MealType
            })))
    };
</script>
<script src="~/js/admin-disputes.js"></script>
    <script src="~/js/dispute.js"></script>
</body>
</html>
