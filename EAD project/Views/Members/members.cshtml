@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mess Management - Members</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/members.css">
</head>
<body>

    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h3><i class="bi bi-egg-fried me-2"></i>MessHub</h3>
            </div>
            <nav class="sidebar-nav">
                <a href="@Url.Action("Admindashboard","Admin")" class="nav-link"><i class="bi bi-grid-1x2-fill"></i> Dashboard</a>
                <a href="@Url.Action("members","Members")" class="nav-link active"><i class="bi bi-people-fill"></i> Members</a>
                <a href="#" class="nav-link"><i class="bi bi-calendar-check-fill"></i> Attendance</a>
                <a href="#" class="nav-link"><i class="bi bi-journal-text"></i> Menu</a>
                <a href="#" class="nav-link"><i class="bi bi-receipt"></i> Bills</a>
                <a href="#" class="nav-link"><i class="bi bi-exclamation-triangle-fill"></i> Disputes</a>
            </nav>
            <div class="sidebar-footer">
                <a href="@Url.Action("login","Login")" class="nav-link"><i class="bi bi-box-arrow-left"></i> Logout</a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Navbar -->
            <header class="top-navbar">
                <button class="btn sidebar-toggle d-md-none" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <h4 class="page-title">Members Management</h4>
                <div class="navbar-right">
                    <span class="user-greeting">Hello, <strong>Admin</strong></span>
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                </div>
            </header>

            <!-- Members Content -->
            <div class="dashboard-content">
                <!-- Action Bar -->
                <div class="action-bar">
                    <div class="search-box">
                        <i class="bi bi-search"></i>
                        <input type="text" id="searchInput" placeholder="Search by username, email or CNIC...">
                        <button class="btn-clear-search" id="clearSearch" style="display: none;">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                    <a href="adduser.html" class="btn btn-add-member">
                        <i class="bi bi-person-plus-fill me-2"></i>Add Member
                    </a>
                </div>

                <!-- Stats Row -->
                <div class="row g-3 mb-4">
                    <div class="col-6 col-md-3">
                        <div class="mini-stat-card">
                            <div class="mini-stat-icon bg-primary-light">
                                <i class="bi bi-people-fill text-primary"></i>
                            </div>
                            <div class="mini-stat-info">
                                <h4 id="totalMembers">0</h4>
                                <p>Total Members</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="mini-stat-card">
                            <div class="mini-stat-icon bg-success-light">
                                <i class="bi bi-person-check-fill text-success"></i>
                            </div>
                            <div class="mini-stat-info">
                                <h4 id="activeMembers">0</h4>
                                <p>Active</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="mini-stat-card">
                            <div class="mini-stat-icon bg-warning-light">
                                <i class="bi bi-person-dash-fill text-warning"></i>
                            </div>
                            <div class="mini-stat-info">
                                <h4 id="inactiveMembers">0</h4>
                                <p>Inactive</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="mini-stat-card">
                            <div class="mini-stat-icon bg-info-light">
                                <i class="bi bi-calendar-plus-fill text-info"></i>
                            </div>
                            <div class="mini-stat-info">
                                <h4 id="newThisMonth">0</h4>
                                <p>New This Month</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Members Table Card -->
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-table me-2"></i>All Members</h5>
                        <div class="header-actions">
                            <select id="filterDepartment" class="form-select form-select-sm">
                                <option value="">All Departments</option>
                                <option value="Computer Science">Computer Science</option>
                                <option value="Electrical Engineering">Electrical Engineering</option>
                                <option value="Mechanical Engineering">Mechanical Engineering</option>
                                <option value="Civil Engineering">Civil Engineering</option>
                                <option value="Business Administration">Business Administration</option>
                                <option value="IT">IT</option>
                                <option value="Finance">Finance</option>
                                <option value="HR">HR</option>
                                <option value="Marketing">Marketing</option>
                                <option value="Operations">Operations</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table members-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Member</th>
                                        <th>Username</th>
                                        <th>CNIC</th>
                                        <th>Department</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="membersTableBody">
                                    <!-- Members will be loaded here -->
                                </tbody>
                            </table>
                        </div>
                        <!-- Empty State -->
                        <div class="empty-state" id="emptyState" style="display: none;">
                            <i class="bi bi-people"></i>
                            <h5>No Members Found</h5>
                            <p>No members match your search criteria.</p>
                        </div>
                        <!-- Loading State -->
                        <div class="loading-state" id="loadingState">
                            <div class="spinner-border text-success" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p>Loading members...</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Edit Member Modal -->
    <div class="modal fade" id="editMemberModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Edit Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editMemberForm">
                        <input type="hidden" id="editMemberId">
                        <div class="mb-3">
                            <label for="editEmail" class="form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                <input type="email" class="form-control" id="editEmail" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="editCnic" class="form-label">CNIC</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-credit-card-fill"></i></span>
                                <input type="text" class="form-control" id="editCnic" maxlength="15" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="editDepartment" class="form-label">Department</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-building-fill"></i></span>
                                <select class="form-select" id="editDepartment" required>
                                    <option value="">Select Department</option>
                                    <option value="Computer Science">Computer Science</option>
                                    <option value="Electrical Engineering">Electrical Engineering</option>
                                    <option value="Mechanical Engineering">Mechanical Engineering</option>
                                    <option value="Civil Engineering">Civil Engineering</option>
                                    <option value="Business Administration">Business Administration</option>
                                    <option value="IT">IT</option>
                                    <option value="Finance">Finance</option>
                                    <option value="HR">HR</option>
                                    <option value="Marketing">Marketing</option>
                                    <option value="Operations">Operations</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="editUsername" class="form-label">Username</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                                <input type="text" class="form-control" id="editUsername" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="editStatus" class="form-label">Status</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-toggle-on"></i></span>
                                <select class="form-select" id="editStatus" required>
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="saveEditBtn">
                        <i class="bi bi-check-circle me-2"></i>Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteMemberModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="bi bi-person-x-fill text-danger" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-0">Are you sure you want to delete <strong id="deleteMemberName"></strong>?</p>
                    <small class="text-muted">This action cannot be undone.</small>
                    <input type="hidden" id="deleteMemberId">
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                        <i class="bi bi-trash-fill me-2"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- View Member Modal -->
    <div class="modal fade" id="viewMemberModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-person-badge me-2"></i>Member Details</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="member-profile text-center mb-4">
                        <div class="profile-avatar">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <h4 id="viewMemberName" class="mt-3 mb-1">-</h4>
                        <span class="badge bg-success" id="viewMemberStatus">Active</span>
                    </div>
                    <div class="member-details">
                        <div class="detail-row">
                            <span class="detail-label"><i class="bi bi-envelope-fill me-2"></i>Email</span>
                            <span class="detail-value" id="viewMemberEmail">-</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label"><i class="bi bi-person-fill me-2"></i>Username</span>
                            <span class="detail-value" id="viewMemberUsername">-</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label"><i class="bi bi-credit-card-fill me-2"></i>CNIC</span>
                            <span class="detail-value" id="viewMemberCnic">-</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label"><i class="bi bi-building-fill me-2"></i>Department</span>
                            <span class="detail-value" id="viewMemberDepartment">-</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label"><i class="bi bi-shield-fill me-2"></i>Role</span>
                            <span class="detail-value" id="viewMemberRole">-</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" id="editFromViewBtn">
                        <i class="bi bi-pencil me-2"></i>Edit
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Convert Razor Model to JS array
        const membersData = @Html.Raw(Json.Serialize(Model));
    </script>

    <!-- Custom JS -->
    <script src="~/js/members.js"></script>
</body>
</html>
