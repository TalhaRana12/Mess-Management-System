    <!-- Edit Menu Modal -->
    <div class="modal fade" id="editMenuModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Edit <span id="editDayName">Monday</span>'s Menu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="meal-edit-section">
                                <h6><i class="bi bi-brightness-high-fill me-2"></i>Lunch Menu</h6>
                                <div id="lunchItemsContainer"></div>
                                <button type="button" class="btn btn-add-item" onclick="addMenuItem('lunch')">
                                    <i class="bi bi-plus-circle me-1"></i> Add Item
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="meal-edit-section">
                                <h6><i class="bi bi-moon-fill me-2"></i>Dinner Menu</h6>
                                <div id="dinnerItemsContainer"></div>
                                <button type="button" class="btn btn-add-item" onclick="addMenuItem('dinner')">
                                    <i class="bi bi-plus-circle me-1"></i> Add Item
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="saveMenuBtn">
                        <i class="bi bi-check-circle me-2"></i>Save Menu
                    </button>
                </div>
            </div>
        </div>
