@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mess Management - Login</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Link to your CSS file -->
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    @if (ViewBag.Error != null)
    {
            <div class="alert alert-danger">
            @ViewBag.Error
            </div>
    }
    <div class="main-wrapper">
        <!-- Left Side: Branding & Image -->
        <div class="branding-side">
            <div class="branding-overlay"></div>
            <div class="branding-content">
                <h1>Fresh & Healthy</h1>
                <p>Healthy And Fresh Meal Everyday</p>
            </div>
        </div>

        <!-- Right Side: Login Form -->
        <div class="login-side">
            <div class="login-box">
                <div class="login-header">
                    <h2>Welcome Back</h2>
                    <p class="text-muted">Please login to your account</p>
                </div>

                <form id="loginForm" asp-controller="Login" asp-action="check" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" placeholder="e.g. abc" >
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="password-wrapper">
                            <input type="password" class="form-control" id="password" placeholder="••••••••" >
                            <button type="button" class="password-toggle" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-login">Sign In</button>
                    </div>

                    <div class="text-center">
                        <a href="#" class="text-decoration-none text-muted small">Forgot Password? Contact Admin</a>
                    </div>
                </form>

                <div class="mt-4 text-center border-top pt-3">
                    <small class="text-muted">Need an account? Contact Admin.</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Link to your JS file -->
    <script src="~/js/login.js"></script>
</body>
</html>
