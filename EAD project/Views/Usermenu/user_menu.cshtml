        </aside>

        <!-- Sidebar Overlay for Mobile -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <main class="main-content">
            <header class="top-navbar">
                <button class="btn sidebar-toggle d-lg-none" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <h4 class="page-title">Weekly Menu</h4>
                <div class="navbar-right">
                    <span class="user-greeting">Hello, <strong>User</strong></span>
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                </div>
            </header>

            <div class="dashboard-content">
                <div class="today-highlight" id="todayHighlight">
                    <div class="today-badge">
                        <i class="bi bi-star-fill"></i> Today's Menu
                    </div>
                    <div class="today-content">
                        <h4 id="todayDay">Loading...</h4>
                        <p id="todayDate">Loading...</p>
                    </div>
                </div>

                <div class="menu-grid">
                    <!-- Monday -->
                    <div class="menu-card" data-day="monday">
                        <div class="menu-card-header">
                            <div class="day-info">
                                <h5>Monday</h5>
                                <span class="date-label">Dec 1</span>
                            </div>
                        </div>
                        <div class="menu-card-body">
                            <div class="meal-section">
                                <div class="meal-header"><i class="bi bi-brightness-high-fill"></i> Lunch</div>
                                <table class="menu-table">
                                    <thead><tr><th>Item</th><th>Price</th></tr></thead>
                                    <tbody id="monday-lunch"></tbody>
                                    <tfoot><tr><td><strong>Lunch Total</strong></td><td><strong id="monday-lunch-total">Rs. 0</strong></td></tr></tfoot>
                                </table>
                            </div>
                            <div class="meal-section">
                                <div class="meal-header"><i class="bi bi-moon-fill"></i> Dinner</div>
                                <table class="menu-table">
                                    <thead><tr><th>Item</th><th>Price</th></tr></thead>
                                    <tbody id="monday-dinner"></tbody>
                                    <tfoot><tr><td><strong>Dinner Total</strong></td><td><strong id="monday-dinner-total">Rs. 0</strong></td></tr></tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="menu-card-footer">
                            <span class="total-label">Day Total:</span>
                            <span class="total-price" id="monday-total">Rs. 0</span>
                        </div>
                    </div>

