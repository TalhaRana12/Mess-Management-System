@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mess Management - Weekly Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Ensure this path is correct -->
    <link rel="stylesheet" href="~/css/usermenu.css">
</head>
<body>

    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h3><i class="bi bi-egg-fried me-2"></i>MessHub</h3>
            </div>
            <nav class="sidebar-nav">
                <a href="@Url.Action("user_dashboard","Userdashboard")" class="nav-link"><i class="bi bi-grid-1x2-fill"></i> My Dashboard</a>
                <a href="@Url.Action("user_attendance","Userattendance")" class="nav-link"><i class="bi bi-calendar-check-fill"></i> My Attendance</a>
                <a href="@Url.Action("user_menu","Usermenu")" class="nav-link active"><i class="bi bi-journal-text"></i> Menu</a>
                <a href="@Url.Action("user_bill","Bill_user")" class="nav-link"><i class="bi bi-receipt"></i> My Bills</a>
                <a href="@Url.Action("user_dispute", "Userdispute")" class="nav-link"><i class="bi bi-exclamation-triangle-fill"></i> My Disputes</a>
                <a href="@Url.Action("user_profile", "Userprofile")#" class="nav-link"><i class="bi bi-person-circle"></i> Profile</a>
            </nav>
            <div class="sidebar-footer">
                <a href="@Url.Action("logout", "Logout")" class="nav-link"><i class="bi bi-box-arrow-left"></i> Logout</a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="top-navbar">
                <!-- Toggle Button with ID -->
                <button class="btn sidebar-toggle d-lg-none" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <h4 class="page-title">Weekly Menu</h4>
                <div class="navbar-right">
                    <span class="user-greeting">Hello, <strong>User</strong></span>
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                </div>
            </header>

            <div class="dashboard-content">
                <!-- Banner -->
                <div class="today-highlight" id="todayHighlight">
                    <div class="today-badge">
                        <i class="bi bi-star-fill"></i> Today's Menu
                    </div>
                    <div class="today-content">
                        <h4 id="todayDay">Loading...</h4>
                        <p id="todayDate">Loading...</p>
                    </div>
                </div>

                <!-- Menu Grid -->
                <div class="menu-grid">
                    <!-- Cards are rendered via JS, but structure must match IDs in JS -->
                    @* Helper function to render card structure to avoid clutter *@
                    @functions {
                        void RenderCard(string day, string label, string date, bool special = false)
                        {
                            string cssClass = special ? "menu-card special-day" : "menu-card";
                            string dayLower = day.ToLower();

                                    <div class="@cssClass" data-day="@dayLower">
                                @if (special)
                                {
                                    <div class="special-badge"><i class="bi bi-star-fill"></i> Special</div>
                                }
                                        <div class="menu-card-header">
                                            <div class="day-info">
                                                <h5>@day</h5>
                                                <span class="date-label">@date</span>
                                            </div>
                                        </div>
                                        <div class="menu-card-body">
                                            <div class="meal-section">
                                                <div class="meal-header"><i class="bi bi-brightness-high-fill"></i> Lunch</div>
                                                <table class="menu-table">
                                                    <thead><tr><th>Item</th><th>Price</th></tr></thead>
                                                    <tbody id="@dayLower-lunch"></tbody>
                                                    <tfoot><tr><td>Total</td><td><strong id="@dayLower-lunch-total">Rs. 0</strong></td></tr></tfoot>
                                                </table>
                                            </div>
                                            <div class="meal-section">
                                                <div class="meal-header"><i class="bi bi-moon-fill"></i> Dinner</div>
                                                <table class="menu-table">
                                                    <thead><tr><th>Item</th><th>Price</th></tr></thead>
                                                    <tbody id="@dayLower-dinner"></tbody>
                                                    <tfoot><tr><td>Total</td><td><strong id="@dayLower-dinner-total">Rs. 0</strong></td></tr></tfoot>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="menu-card-footer">
                                            <span class="total-label">Day Total:</span>
                                            <span class="total-price" id="@dayLower-total">Rs. 0</span>
                                        </div>
                                    </div>
                        }
                    }

                    <!-- Render Days -->
                    @{
                        RenderCard("Monday", "Monday", "Dec 1");
                        RenderCard("Tuesday", "Tuesday", "Dec 2");
                        RenderCard("Wednesday", "Wednesday", "Dec 3");
                        RenderCard("Thursday", "Thursday", "Dec 4");
                        RenderCard("Friday", "Friday", "Dec 5", true);
                        RenderCard("Saturday", "Saturday", "Dec 6");
                        RenderCard("Sunday", "Sunday", "Dec 7");
                    }
                </div>

                <!-- Summary -->
                <div class="weekly-summary">
                    <div class="summary-card">
                        <div class="summary-icon"><i class="bi bi-currency-rupee"></i></div>
                        <div class="summary-info">
                            <h4 id="weeklyTotal">Rs. 0</h4>
                            <p>Weekly Total</p>
                        </div>
                    </div>
                    <div class="summary-card">
                        <div class="summary-icon"><i class="bi bi-egg-fried"></i></div>
                        <div class="summary-info">
                            <h4 id="totalItems">0</h4>
                            <p>Total Items</p>
                        </div>
                    </div>
                    <div class="summary-card">
                        <div class="summary-icon"><i class="bi bi-calculator"></i></div>
                        <div class="summary-info">
                            <h4 id="avgDaily">Rs. 0</h4>
                            <p>Avg. Daily Cost</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- MOVED OVERLAY HERE (Outside wrapper, direct child of body) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Pass model to JS safely
        let menu = @Html.Raw(Json.Serialize(Model));
    </script>
    <script src="~/js/usermenu.js"></script>
</body>
</html>