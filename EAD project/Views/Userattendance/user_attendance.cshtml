@{
	Layout = null;
}

@using EAD_project.Controllers
@model AttendanceModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MessHub - My Attendance</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/userattendance.css">
</head>
<body>

    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h3><i class="bi bi-egg-fried me-2"></i>MessHub</h3>
            </div>
            <nav class="sidebar-nav">
                <a href="user-dashboard.html" class="nav-link"><i class="bi bi-grid-1x2-fill"></i> My Dashboard</a>
                <a href="user-attendance.html" class="nav-link active"><i class="bi bi-calendar-check-fill"></i> My Attendance</a>
                <a href="menu.html" class="nav-link"><i class="bi bi-journal-text"></i> Menu</a>
                <a href="#" class="nav-link"><i class="bi bi-receipt"></i> My Bills</a>
                <a href="#" class="nav-link"><i class="bi bi-exclamation-triangle-fill"></i> My Disputes</a>
                <a href="#" class="nav-link"><i class="bi bi-person-circle"></i> Profile</a>
            </nav>
            <div class="sidebar-footer">
                <a href="login.html" class="nav-link"><i class="bi bi-box-arrow-left"></i> Logout</a>
            </div>
        </aside>

        <!-- Sidebar Overlay for Mobile -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Navbar -->
            <header class="top-navbar">
                <button class="btn sidebar-toggle d-lg-none" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <h4 class="page-title">My Attendance</h4>
                <div class="navbar-right">
                    <span class="user-greeting">Hello, <strong id="userName">Ahmed Ali</strong></span>
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                </div>
            </header>

            <!-- Attendance Content -->
            <div class="dashboard-content">
                <!-- Month Selection Bar -->
                <div class="month-selection-bar">
                    <div class="month-control">
                        <button class="btn btn-outline-secondary" id="prevMonthBtn" title="Previous Month">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                        <div class="month-picker-wrapper">
                            <input type="month" class="form-control month-input" id="attendanceMonth">
                        </div>
                        <button class="btn btn-outline-secondary" id="nextMonthBtn" title="Next Month">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                        <button class="btn btn-current-month" id="currentMonthBtn">
                            <i class="bi bi-calendar-today me-2"></i>Current Month
                        </button>
                    </div>
                    <div class="month-display">
                        <h5><i class="bi bi-calendar3 me-2"></i><span id="selectedMonthDisplay">December 2025</span></h5>
                    </div>
                </div>

                <!-- Stats Row -->
                <div class="row g-3 mb-4">
                    <div class="col-6 col-md-4">
                        <div class="mini-stat-card">
                            <div class="mini-stat-icon bg-primary-light">
                                <i class="bi bi-calendar-check-fill text-primary"></i>
                            </div>
                            <div class="mini-stat-info">
                                <h4 id="totalDays">0</h4>
                                <p>Total Days</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="mini-stat-card">
                            <div class="mini-stat-icon bg-warning-light">
                                <i class="bi bi-egg-fried text-warning"></i>
                            </div>
                            <div class="mini-stat-info">
                                <h4 id="totalMeals">0</h4>
                                <p>Total Meals</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="mini-stat-card">
                            <div class="mini-stat-icon bg-danger-light">
                                <i class="bi bi-currency-rupee text-danger"></i>
                            </div>
                            <div class="mini-stat-info">
                                <h4 id="monthTotal">Rs. 0</h4>
                                <p>Month Total</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Attendance Table Card -->
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-table me-2"></i>Attendance Records</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table user-attendance-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Date</th>
                                        <th>Day</th>
                                        <th class="text-center">Tea/Water</th>
                                        <th class="text-center">Lunch</th>
                                        <th class="text-center">Dinner</th>
                                        <th class="text-end">Total Cost</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="attendanceTableBody">
                                    <!-- Attendance rows will be loaded here -->
                                </tbody>
                                <tfoot>
                                    <tr class="total-row">
                                        <td colspan="6"><strong>Monthly Total</strong></td>
                                        <td class="text-end"><strong id="monthlyTotalCost">Rs. 0</strong></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- Empty State -->
                        <div class="empty-state" id="emptyState" style="display: none;">
                            <i class="bi bi-calendar-x"></i>
                            <h5>No Attendance Records</h5>
                            <p>No attendance records found for the selected month.</p>
                        </div>
                        <!-- Loading State -->
                        <div class="loading-state" id="loadingState">
                            <div class="spinner-border text-success" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p>Loading attendance records...</p>
                        </div>
                    </div>
                </div>

                <!-- Information Cards -->
                <div class="row g-4 mt-2">
                    <div class="col-12 col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="bi bi-info-circle me-2"></i>About Verification</h5>
                            </div>
                            <div class="card-body">
                                <div class="instruction-list">
                                    <div class="instruction-item">
                                        <i class="bi bi-1-circle-fill text-success"></i>
                                        <div>
                                            <strong>Review Your Attendance</strong>
                                            <p>Check each day's attendance record carefully, including tea/water and meal consumption.</p>
                                        </div>
                                    </div>
                                    <div class="instruction-item">
                                        <i class="bi bi-2-circle-fill text-success"></i>
                                        <div>
                                            <strong>Send to Admin for Verification</strong>
                                            <p>Click the "Verify" button to send the attendance record to admin for verification and approval.</p>
                                        </div>
                                    </div>
                                    <div class="instruction-item">
                                        <i class="bi bi-3-circle-fill text-success"></i>
                                        <div>
                                            <strong>Admin Review</strong>
                                            <p>Once sent, the admin will review and approve your attendance. You'll be notified of the status.</p>
                                        </div>
                                    </div>
                                    <div class="instruction-item">
                                        <i class="bi bi-4-circle-fill text-success"></i>
                                        <div>
                                            <strong>Monthly Deadline</strong>
                                            <p>Send your attendance for verification before the end of each month to ensure timely billing.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="bi bi-calculator me-2"></i>Cost Breakdown</h5>
                            </div>
                            <div class="card-body">
                                <div class="cost-breakdown">
                                    <div class="cost-item">
                                        <div class="cost-label">
                                            <i class="bi bi-cup-hot-fill text-success"></i>
                                            <span>Tea/Water Days</span>
                                        </div>
                                        <div class="cost-value">
                                            <span id="teaWaterDays">0</span> days × Rs. <span id="teaWaterPrice">50</span>
                                            <strong>= Rs. <span id="teaWaterTotal">0</span></strong>
                                        </div>
                                    </div>
                                    <div class="cost-item">
                                        <div class="cost-label">
                                            <i class="bi bi-brightness-high-fill text-warning"></i>
                                            <span>Lunch Meals</span>
                                        </div>
                                        <div class="cost-value">
                                            <span id="lunchCount">0</span> meals
                                            <strong>= Rs. <span id="lunchTotal">0</span></strong>
                                        </div>
                                    </div>
                                    <div class="cost-item">
                                        <div class="cost-label">
                                            <i class="bi bi-moon-fill text-primary"></i>
                                            <span>Dinner Meals</span>
                                        </div>
                                        <div class="cost-value">
                                            <span id="dinnerCount">0</span> meals
                                            <strong>= Rs. <span id="dinnerTotal">0</span></strong>
                                        </div>
                                    </div>
                                    <div class="cost-item total-cost">
                                        <div class="cost-label">
                                            <i class="bi bi-currency-rupee"></i>
                                            <span>Grand Total</span>
                                        </div>
                                        <div class="cost-value">
                                            <strong class="grand-total">Rs. <span id="grandTotal">0</span></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Verification Confirmation Modal -->
    <div class="modal fade" id="verifyModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-send me-2"></i>Send to Admin</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to send this attendance record to admin for verification?</p>
                    <div class="verification-details" id="verificationDetails">
                        <!-- Details will be populated here -->
                    </div>
                    <div class="alert alert-info mt-3 mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <small>The admin will review and verify your attendance record.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmVerifyBtn">
                        <i class="bi bi-send me-2"></i>Send to Admin
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Dispute Modal -->
    <div class="modal fade" id="disputeModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Raise Dispute</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Please provide details about the issue with this attendance record:</p>
                    <div class="mb-3">
                        <label for="disputeReason" class="form-label">Reason for Dispute</label>
                        <textarea class="form-control" id="disputeReason" rows="4" 
                                  placeholder="E.g., I was marked present but I was absent that day..."></textarea>
                    </div>
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <small>Admin will review your dispute and respond within 2-3 business days.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-warning" id="confirmDisputeBtn">
                        <i class="bi bi-exclamation-triangle me-2"></i>Submit Dispute
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script>
        let attendance= @Html.Raw(Json.Serialize(Model.attendance));
        let requests=@Html.Raw(Json.Serialize(Model.request));
        </script>
    <script src="~/js/userattendance.js"></script>
</body>
</html>
